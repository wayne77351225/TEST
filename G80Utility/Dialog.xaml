<Window x:Class="G80Utility.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="250" Width="250" Background="#595959"  >
    <GroupBox Header="{DynamicResource PwdTitle}"  BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" Margin="5">
        <StackPanel Background="#595959" Margin="10" VerticalAlignment="Center" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="Images/ic_error.png" Width="20" />
                <Label Name="DiaglogLabel"  FontSize="16" />
            </StackPanel>
            <TextBox x:Name="PwdTextBox" Margin="0,10,0,10" Height="30" FontSize="14" />
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Content="{DynamicResource ok}" Click="OKButton_Click" 
                    Padding="10,5,10,5" Margin="0,0,10,0" Width="80" FontSize="14" IsDefault="True"/>
                <Button Content="{DynamicResource cancel}" Width="80" Click="CancelButton_Click"  
                    Padding="10,5,10,5" FontSize="14"/>
            </StackPanel>
        </StackPanel>
    </GroupBox>
</Window>
