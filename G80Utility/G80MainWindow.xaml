    <StackPanel  Background="#333333">
        <!--Top 通訊-->
        <Border Margin="5,10,5,3" >
            <StackPanel Background="#595959" Orientation="Horizontal" >
                <!--通訊介面-->
                <GroupBox Header="{DynamicResource ConnectionInterface}" Margin="10,10,0,10" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14"  Height="150">
                    <StackPanel Orientation="Horizontal">
                        <!--RS232-->
                        <StackPanel>
                            <StackPanel  Margin="10" Orientation="Horizontal">
                                <RadioButton FontSize="14" Name="RS232Radio" GroupName="connection" Content="{DynamicResource RS232}" VerticalAlignment="Center" Margin="0,0,5,0"   Checked="ConnectType_SelectionChanged" />
                                <Image Margin="35,0,0,0" Source="Images/grey_circle.png" Width="12" Name="RS232ConnectImage"/>
                            </StackPanel>
                            <ComboBox Margin="10,0,10,0"  FontSize="14" Width="100" Height="30" Name="DeviceSelectRS232"
                            ItemsSource="{Binding Device}"
                            DisplayMemberPath="DisplayName"
                            SelectionChanged="RS232_SelectedChnaged"/>
                            <ComboBox Margin="10,10,10,0"  FontSize="14"  Height="30" Name="BaudRateCom"  Width="100" SelectionChanged="BaudRateCom_SelectionChanged">
                                <ComboBoxItem Content="9600"/>
                                <ComboBoxItem Content="19200"/>
                                <ComboBoxItem Content="38400"/>
                                <ComboBoxItem Content="115200"/>
                            </ComboBox>
                        </StackPanel>

                        <!--USB-->
                        <StackPanel>
                            <StackPanel  Margin="10" Orientation="Horizontal">
                                <RadioButton FontSize="14"  Name="USBRadio" GroupName="connection" Content="{DynamicResource USB}" VerticalAlignment="Center"   Checked="ConnectType_SelectionChanged" />
                                <Image Margin="52,0,0,0"  Source="Images/grey_circle.png" Width="12" Name="USBConnectImage"/>
                            </StackPanel>
                            <ComboBox Margin="10,0,10,0" FontSize="14" Width="120" Height="30" Name="DeviceSelectUSB"
                                ItemsSource="{Binding Device}"
                             DisplayMemberPath="DisplayName"
                            />
                        </StackPanel>
                        <!--乙太網-->
                        <StackPanel>
                            <StackPanel Margin="10" Orientation="Horizontal">
                                <RadioButton FontSize="14" Name="EhernetRadio" GroupName="connection" Content="{DynamicResource Ethernet}" VerticalAlignment="Center"  Checked="ConnectType_SelectionChanged"/>
                                <Image  Margin="52,0,0,0"   Source="Images/grey_circle.png" Width="12" Name="EthernetConnectImage"/>
                            </StackPanel>
                            <TextBox Margin="10,0,10,0"  FontSize="14"  Height="30"  Width="110" Foreground="#BDBDBD" Padding="5"/>
                        </StackPanel>
                        <!--通訊測試-->
                        <StackPanel Margin="10,0,10,0" VerticalAlignment="Center">
                            <CheckBox Content="串口" Margin="0,0,0,5" Name="rs232Checkbox"/>
                            <CheckBox Content="USB打印设备" Margin="0,0,0,5" Name="USBCheckbox"/>
                            <CheckBox Content="以太网" Margin="0,0,0,15" Name="EthernetCheckbox"/>
                            <Button Content="三接口测试" Padding="5" Name="ConnectTest" Click="ConnectTest_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <!--機器信息-->
                <GroupBox Header="机器信息" Margin="15,5,0,10" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" Height="150">
                    <StackPanel VerticalAlignment="Top">
                        <Label Content="机器序列号:" FontSize="14" Margin="5,0,0,0"/>
                        <TextBox Width="200" Height="30"  Name="PrinterSN" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                        <Label Content="GP80250   V1.0：2020-01-10 " Margin="5,3,0,0" Name="PrinterModule" />
                        <StackPanel Orientation="Horizontal">
                            <Button  Margin="5" Content="读取信息" Padding="5" FontSize="14" Width="100"/>
                            <Button  Margin="5" Content="设置序列号" Padding="5" FontSize="14" Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <!--其他設定-->
                <GroupBox Header="其他设定" Margin="15,5,10,10" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14"  Height="150">
                    <StackPanel>
                        <!--Change Language-->
                        <StackPanel Orientation="Horizontal" Margin="7,10,5,10" HorizontalAlignment="Center">
                            <Label Padding="0" FontSize="14" Content="{DynamicResource SelectLanguage}" VerticalAlignment="Center"/>
                            <ComboBox  FontSize="14" Padding="8,8,0,0" Width="100" Height="30" Background="#424242" SelectionChanged="Language_SelectionChanged" Name="language" >
                                <ComboBoxItem  Content="{DynamicResource zhTW}" />
                                <ComboBoxItem  Content="{DynamicResource zhCN}" />
                                <ComboBoxItem  Content="{DynamicResource enUS}" />
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button  Margin="10,5,5,5" Content="导入参数" Padding="5" FontSize="14" Width="85"/>
                            <Button  Margin="5" Content="重启打印机" Padding="5" FontSize="14" Width="85" Name="Restart" Click="Restart_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button  Margin="10,5,5,5" Content="保存参数" Padding="5" FontSize="14" Width="85"/>
                            <Button  Margin="5,5,10,5" Content="登录管理员" Padding="5" FontSize="14" Width="85"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
