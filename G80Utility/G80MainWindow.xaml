                                    <Button  Margin="10,5,10,5" Name="PrintTest_EVEN" Click="PrintTest_EVEN_Click" Content="打印均匀测试" Padding="5" FontSize="14" Width="180" />
                                    <StackPanel   Margin="10,5,10,5" Orientation="Horizontal" HorizontalAlignment="Center" >
                                        <TextBox  Text="1" FontSize="14" Width="70" Name="CutTimesTxt"/>
                                        <Button  Margin="10,0,0,0" Name="CutTimesBtn" Click="CutTimesBtn_Click" Content="连续切纸" Padding="5" FontSize="14"  Width="100"/>
                                    </StackPanel>
                                    <Button  Margin="10,5,10,5" Name="BeepTestBtn" Click="BeepTestBtn_Click" Content="蜂鸣器测试" Padding="5" FontSize="14" Width="180" />
                                    <Button  Margin="10,5,10,5" Name="OpenCashBoxBtn" Click="OpenCashBoxBtn_Click" Content="打开钱箱" Padding="5" FontSize="14" Width="180" />
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,10,0,10">
                                        <StackPanel Margin="0,0,7,0" >
                                            <CheckBox Content="二维码" Name="CMDQRCodeCheckbox" FontSize="14" Padding="5,0,0,0" Margin="0,0,0,10" />
                                            <CheckBox Content="通用指令" Name="CMDGeneralCheckbox" FontSize="14" Padding="5,0,0,0" Margin="0,0,0,10"/>
                                            <CheckBox Content="页模式" Name="CMDPageCheckbox" FontSize="14" Padding="5,0,0,0"/>
                                        </StackPanel>
                                        <Button  Margin="10,0,0,0" Name="CMDTestBtn" Click="CMDTestBtn_Click" Content="指令测试" Padding="5" FontSize="14" Width="90"  Height="70"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                            <StackPanel Grid.Column="1" Grid.Row="0">
                                <!--機器信息-->
                                <GroupBox  Header="机器信息" Margin="20,0,0,20" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" Height="150">
                                    <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                                        <Label Content="机器序列号:" FontSize="14" Margin="5,0,0,0"/>
                                        <TextBox FontSize="14" Width="200" Height="30"  Name="PrinterSNFacTxt" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                                        <Label Content="GP80250   V1.0：2020-01-10 " Margin="5,3,0,0" Name="PrinterModuleFac" />
                                        <StackPanel Orientation="Horizontal">
                                            <Button  Margin="5" Name="RoadPrinterSNFacBtn" Click="RoadPrinterSNFacBtn_Click" Content="读取信息" Padding="5" FontSize="14" Width="100"/>
                                            <Button  Margin="5" Name="SetPrinterSNFacBtn"  Click="SetPrinterSNFacBtn_Click" Content="设置序列号" Padding="5" FontSize="14" Width="100"/>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                                <Button Margin="20,0,0,0" Name="FactoryDefaultBtn" Click="FactoryDefaultBtn_Click" Content="出厂设置" Padding="5" FontSize="14" Height="40" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </TabItem>

            <!--升級程序-->
            <TabItem FontSize="14" Visibility="Visible">
                <TabItem.Header>
                    <Label Content="{DynamicResource FWUpdate}"
                            Name="FWUpdateTab"
                            MouseLeftButtonDown="FWUpdateTab_MouseLeftButtonDown"
                            Padding="0" Margin="0"
                    />
                </TabItem.Header>
                <Border CornerRadius="5" Background="#595959" Margin="0,0,1,2"  Name="FWUpgradeTab" >
                    <StackPanel  Margin="0,40,0,0" HorizontalAlignment="Center" >
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Label Content="HID設備連接狀況" Margin="0,0,5,0"/>
                            <TextBox Name="DeviceStatusTxt" Width="210" Height="25"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBox  Name="FilePathTxt" Width="450" Height="25"/>
                            <Button  Name="OpenFWfileBtn" Click="OpenFWfileBtn_Click" Margin="10,5,5,5" Content="打开文件" Padding="5" FontSize="14" Width="100"/>
                        </StackPanel>
                        <!--解析文件數據-->
                        <GroupBox Margin="0,0,0,25" Header="解析文件數據" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" Height="120" Width="565" HorizontalAlignment="Left">
                            <StackPanel Margin="10,10,0,10" HorizontalAlignment="Left">
                                <ProgressBar Name="ReadFileProgress" Height="25" Width="445"  Margin="0,10,0,15" HorizontalAlignment="Left"/>
                                <StackPanel Orientation="Horizontal">
                                    <Label>狀態:</Label>
                                    <Label Name="StatusLabel" Margin="0,0,5,0" Width="80"></Label>
                                    <Label>寫入地址:</Label>
                                    <Label Name="AddrLabel" Margin="0,0,5,0" Width="100"></Label>
                                    <Label>代碼大小:</Label>
                                    <Label Name="CodeSizeLabel" Margin="0,0,5,0" Width="60"></Label>
                                    <Label Content="時間"/>
                                    <TextBox Name="ConverTimeTxt"  Height="25"  Width="40"/>
                                    <Label>秒</Label>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <!--下載數據-->
                        <GroupBox  Header="下載數據" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" Height="120" Width="565" HorizontalAlignment="Left">
                            <StackPanel  Margin="10,10,0,10" HorizontalAlignment="Left" >
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <ProgressBar Name="DownloadProgress" Height="25" Width="445" Margin="0,0,10,0"/>
                                    <Button Name="DownloadFWBtn" Click="DownloadFWBtn_Click" Content="下载固件" Padding="5" FontSize="14" Width="80"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Label>狀態:</Label>
                                    <Label Name="WriteStatusLabel" Margin="0,0,5,0" Width="80"></Label>
                                    <Label>時間:</Label>
                                    <TextBox Name="DownloadTimeTxt" Height="25"  Width="40"/>
                                    <Label>秒</Label>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>

        <!--Bottom 狀態列-->
        <Border Margin="5,5,5,5" Height="45" >
            <StackPanel Background="#595959"  Orientation="Horizontal" >
                <Label Content="状态信息：" Height="25" FontSize="14" Margin="5,0,0,0" />
                <TextBox Width="450" Margin="0,10,10,10"  Padding="5,5,0,0" Height="25" FontSize="14"  Name="SysStatusText" Text="" Foreground="#BDBDBD" IsEnabled="False"/>
                <!--<Label Content="打印机实时状态："  Height="25" FontSize="14" Margin="30,0,0,0" />-->
                <Button  Margin="30,5,0,5" Name="StatusMonitorBtn" Padding="10,0,10,0" Content="{DynamicResource StartStatusMonitor}" Click="StatusMonitorBtn_Click"  FontSize="14"/>
                <Label Name="StatusMonitorLabel"  Content="" Height="25" FontSize="14"  />
            </StackPanel>
        </Border>
    </StackPanel>
</Window>
