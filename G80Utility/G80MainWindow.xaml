                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="MotorAccControlCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Width="100" Height="26" Name="AccMotorCom" Foreground="#BDBDBD">
                                            <ComboBoxItem>1.0</ComboBoxItem>
                                            <ComboBoxItem>0.8</ComboBoxItem>
                                            <ComboBoxItem>0.6</ComboBoxItem>
                                            <ComboBoxItem>0.4</ComboBoxItem>
                                            <ComboBoxItem>0.2</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="马达加速度" Name="AccMotorBtn" Click="AccMotorBtn_Click" Padding="10,5,10,5" Width="100"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True"  Name="AccMotorCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Name="PrintSpeedCom" Width="100" Height="26"  Foreground="#BDBDBD">
                                            <ComboBoxItem>200mm/s</ComboBoxItem>
                                            <ComboBoxItem>250mm/s</ComboBoxItem>
                                            <ComboBoxItem>300mm/s</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="打印速度"  Name="PrintSpeedBtn" Click="PrintSpeedBtn_Click" Padding="10,5,10,5" Width="100" />
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="PrintSpeedCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Name="DensityModeCom" Width="100" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>低</ComboBoxItem>
                                            <ComboBoxItem>高</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0"  Name="DensityModeBtn" Click="DensityModeBtn_Click" Content="浓度模式" Padding="10,5,10,5" Width="100"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="DensityModeCheckbox"/>
                                    </StackPanel>

                                </StackPanel>
                                <!--column2-->
                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,10,0,0">
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Width="100" Height="26" Name="DensityCom" Foreground="#BDBDBD"/>
                                        <Button  Margin="0,0,5,0" Content="浓度调节" Name="DensityBtn" Click="DensityBtn_Click" Padding="10,5,10,5" Width="125" />
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="DensityCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Name="PaperOutReprintCom" Width="100" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>关闭</ComboBoxItem>
