<Window x:Class="G80Utility.G80MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:input="clr-namespace:System.Windows.Input;assembly=PresentationCore"
        xmlns:local="clr-namespace:G80Utility"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="{DynamicResource WindowTitle}" Height="740" Width="1035">
    <StackPanel  Background="#333333">
        <!--Top 通訊-->
        <Border Margin="5,10,5,3" >
            <StackPanel Background="#595959" Orientation="Horizontal" >
                <!--通訊介面-->
                <GroupBox Header="{DynamicResource ConnectionInterface}" Margin="10,10,0,10" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14"  Height="150">
                    <StackPanel Orientation="Horizontal">
                        <!--RS232-->
                        <StackPanel>
                            <StackPanel  Margin="10" Orientation="Horizontal">
                                <RadioButton FontSize="14" Name="RS232Radio" GroupName="connection" IsChecked="False" Content="{DynamicResource RS232}" VerticalAlignment="Center" Margin="0,0,5,0"   Checked="ConnectType_SelectionChanged" />
                                <Image Margin="35,0,0,0" Source="Images/grey_circle.png" Width="12" Name="RS232ConnectImage"/>
                            </StackPanel>
                            <ComboBox Margin="10,0,10,0"  FontSize="14" Width="100" Height="30" Name="DeviceSelectRS232"
                            ItemsSource="{Binding RS232Device}"
                            DisplayMemberPath="DisplayName"
                            SelectionChanged="RS232_SelectedChnaged"/>
                            <ComboBox Margin="10,10,10,0"  FontSize="14"  Height="30" Name="BaudRateCom"  Width="100" SelectionChanged="BaudRateCom_SelectionChanged">
                                <ComboBoxItem Content="9600"/>
                                <ComboBoxItem Content="19200"/>
                                <ComboBoxItem Content="38400"/>
                                <ComboBoxItem Content="115200"/>
                            </ComboBox>
                           
                        </StackPanel>
                        <!--USB-->
                        <StackPanel>
                            <StackPanel  Margin="10" Orientation="Horizontal">
                                <RadioButton FontSize="14"  Name="USBRadio" GroupName="connection" Content="{DynamicResource USB}" VerticalAlignment="Center"   Checked="ConnectType_SelectionChanged" />
                                <Image Margin="52,0,0,0"  Source="Images/grey_circle.png" Width="12" Name="USBConnectImage"/>
                            </StackPanel>
                            <ComboBox Margin="10,0,10,0" FontSize="14" Width="120" Height="30" Name="DeviceSelectUSB"
                                ItemsSource="{Binding USBDevice}"
                                DisplayMemberPath="DisplayName"
                                SelectionChanged="DeviceSelectUSB_SelectionChanged"
                            />
                            <Button Content="串口關閉" Padding="5" Margin="10" Width="110" Name="ConnectClose" Click="ConnectClose_Click" />
                        </StackPanel>
                        <!--乙太網-->
                        <StackPanel>
                            <StackPanel Margin="10" Orientation="Horizontal">
                                <RadioButton FontSize="14" Name="EhernetRadio" GroupName="connection" Content="{DynamicResource Ethernet}" VerticalAlignment="Center"  Checked="ConnectType_SelectionChanged"/>
                                <Image  Margin="52,0,0,0"   Source="Images/grey_circle.png" Width="12" Name="EthernetConnectImage"/>
                            </StackPanel>
                            <TextBox Margin="10,0,10,0" Name="EhternetIPTxt"   FontSize="14"  Height="30"  Width="110" Foreground="#BDBDBD" Padding="5"/>
                        </StackPanel>
                        <!--通訊測試-->
                        <StackPanel Margin="10,0,10,0" VerticalAlignment="Center">
                            <CheckBox Content="串口" Margin="0,0,0,5" Name="rs232Checkbox" IsChecked="True"/>
                            <CheckBox Content="USB打印设备" Margin="0,0,0,5" Name="USBCheckbox" IsChecked="True"/>
                            <CheckBox Content="以太网" Margin="0,0,0,15" Name="EthernetCheckbox" IsChecked="True"/>
                            <Button Content="三接口测试" Padding="5" Name="ConnectTest" Click="ConnectTest_Click" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <!--機器信息-->
                <GroupBox Header="机器信息" Margin="15,5,0,10" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" Height="150">
                    <StackPanel VerticalAlignment="Top">
                        <Label Content="机器序列号:" FontSize="14" Margin="5,0,0,0"/>
                        <TextBox Width="200" Height="30" FontSize="14" Name="PrinterSNTxt" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                        <Label Content="GP80250   V1.0：2020-01-10 " Margin="5,3,0,0" Name="PrinterModule" />
                        <StackPanel Orientation="Horizontal">
                            <Button  Margin="5" Name="ReadSNBtn" Click="ReadSNBtn_Click"  Content="读取信息" Padding="5" FontSize="14" Width="100"/>
                            <Button  Margin="5" Name="SetSNBtn" Click="SetSNBtn_Click" Content="设置序列号" Padding="5" FontSize="14" Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                <!--其他設定-->
                <GroupBox Header="其他设定" Margin="15,5,10,10" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14"  Height="150">
                    <StackPanel>
                        <!--Change Language-->
                        <StackPanel Orientation="Horizontal" Margin="7,10,5,10" HorizontalAlignment="Center">
                            <Label Padding="0" FontSize="14" Content="{DynamicResource SelectLanguage}" VerticalAlignment="Center"/>
                            <ComboBox  FontSize="14" Padding="8,8,0,0" Width="100" Height="30" Background="#424242" SelectionChanged="Language_SelectionChanged" Name="language" >
                                <!--<ComboBoxItem  Content="{DynamicResource zhTW}" />-->
                                <ComboBoxItem  Content="{DynamicResource zhCN}" />
                                <!--<ComboBoxItem  Content="{DynamicResource enUS}" />-->
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button  Margin="10,5,5,5" Name="LoadParaSettingFIleBtn" Click="LoadParaSettingFIleBtn_Click" Content="导入参数" Padding="5" FontSize="14" Width="85"/>
                            <Button  Margin="5"  Content="重启打印机" Padding="5" FontSize="14" Width="85" Name="Restart" Click="Restart_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button  Margin="10,5,5,5" Name="WriteParaSettingFIleBtn" Click="WriteParaSettingFIleBtn_Click" Content="保存参数" Padding="5" FontSize="14" Width="85"/>
                            <Button  Margin="5,5,10,5" Name="AdminLoginBtn" Click="AdminLoginBtn_Click" Content="登录管理员" Padding="5" FontSize="14" Width="85"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Border>

        <!--Tap分頁-->
        <TabControl Height="470" TabStripPlacement="Top" Margin="5,3,5,0" >
            <!--數據傳輸-->
            <TabItem Header="{DynamicResource PrintTest}"  FontSize="14" >
                <Border Margin="5,5,5,1" Name="DataSendTab"   >
                    <StackPanel  Height="445" Margin="10,0,0,0" >
                        <GroupBox  Header="發送數據" Width="985" Height="260" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14"  HorizontalAlignment="Left" >
                            <TextBox Name="CmdContentTxt" Text="输入需要打印的数据，输入完成后，点击发送按键" Width="970" Height="236"  TextWrapping="Wrap"  VerticalScrollBarVisibility="Auto"/>
                        </GroupBox>
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0"  >
                            <StackPanel Margin="5,20,0,0" >
                                <StackPanel  Margin="0,0,10,10" Orientation="Horizontal">
                                    <Button Width="100" Name="SendCmdBtn" Click="SendCmdBtn_Click" Content="發送" Margin="0,0,10,0" Padding="0,5,0,5" FontSize="14" />
                                    <Button Width="100" Name="SendEnterBtn" Click="SendEnterBtn_Click" Content="打印" Margin="0,0,10,0" Padding="0,5,0,5" FontSize="14" />
                                    <Button Width="100" Name="ClearCmdBtn" Click="ClearCmdBtn_Click" Content="清空" Margin="0,0,10,0" Padding="0,5,0,5" FontSize="14" />
                                    <Button Width="100" Name="OepnFileBtn" Click="OepnFileBtn_Click" Content="打開文件" Margin="0,0,10,0" Padding="0,5,0,5" FontSize="14" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0"  >
                                    <CheckBox Name="HexModeCheckbox" Checked="HexModeCheckbox_Checked" Unchecked="HexModeCheckbox_Unchecked" Content="十六进制模式" Margin="0,0,20,0"  Height="22" Padding="5,0,0,0"  VerticalAlignment="Center" FontSize="14"/>
                                    <!--<CheckBox Content="二維碼模式" Padding="5,0,0,0" VerticalAlignment="Center"  FontSize="14"/>
                                    <Label Content="二維碼大小：" Margin="25,0,0,0" VerticalAlignment="Top"  FontSize="14"/>
                                    <TextBox Width="50"  FontSize="14" Height="22"/>-->
                                </StackPanel>
                                <StackPanel  Margin="-2,10,10,15" Orientation="Horizontal">
                                    <Label Content="定时发送间隔："  FontSize="14"/>
                                    <TextBox Name="SendCmdItervalTxt" Width="70" Text="500"  FontSize="14" Height="22" PreviewTextInput="NumberValidationTextBox" input:InputMethod.IsInputMethodEnabled="False"/>
                                    <Label Content="ms"  FontSize="14" Margin="0,0,10,0"/>
                                    <Button Name="SendCmdItervalBtn" Click="SendCmdItervalBtn_Click" Content="{DynamicResource StartSendCmd}"   FontSize="14" Width="80" Margin="0,0,22,0"/>
                                    <!--<Button Content="十六进制转存模式"  FontSize="14" Width="130"/>-->
                                </StackPanel>
                            </StackPanel>
                            <!--<GroupBox Header="打印小票测试"  Width="520"  Margin="5,0,10,5" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14">
                                <StackPanel  >
                                    <StackPanel Orientation="Horizontal" Margin="10,20,5,10" >
                                        <RadioButton Content="一鍵測試" Margin="0,0,15,0" Padding="5,0,0,0"  VerticalAlignment="Center" FontSize="14"/>
                                        <RadioButton Content="時間戳記" Padding="5,0,0,0" VerticalAlignment="Center"  FontSize="14"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,5,10">
                                        <StackPanel Orientation="Horizontal" Margin="10,5,5,0">
                                            <Label Content="從" VerticalAlignment="Top"  FontSize="14"/>
                                            <TextBox Width="80"  FontSize="14" Height="22"/>
                                            <Label Content="張開始"  FontSize="14"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,5,0">
                                            <Label Content="到"  VerticalAlignment="Top"  FontSize="14"/>
                                            <TextBox Width="80"  FontSize="14" Height="22"/>
                                            <Label Content="張結束" FontSize="14"/>
                                        </StackPanel>
                                        <Button Content="開始計數" Height="26" FontSize="14" Width="75" Margin="5,0,10,0"/>
                                        <Button Content="停止計數" Height="26" FontSize="14" Width="75"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>-->
                        </StackPanel>
                    </StackPanel>
                </Border>
            </TabItem>

            <!--參數設定-->
            <TabItem Header="{DynamicResource PrinterConfig}"  FontSize="14">
                <Border Background="#595959"  Name="ParaSetTab"  >
                    <StackPanel Height="445" Width="1010" Orientation="Horizontal">
                        <StackPanel>
                            <TextBlock Text="勾选后才会下载参数到打印机中" Margin="0,5,0,5" Foreground="#99ef71" FontSize="14" HorizontalAlignment="Center" />
                            <!--全局操作-->
                            <GroupBox Header="全局操作" Margin="5,0,0,5" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" >
                                <StackPanel Name="AllSetAndRead" HorizontalAlignment="Center" Orientation="Horizontal"  Margin="5">
                                    <Button  Margin="0,0,10,0" Content="{DynamicResource SelectAll}" Name="SelectBtn" Click="SelectBtn_Click" Padding="10,5,10,5" Width="50"/>
                                    <Button  Margin="0,0,10,0" Content="{DynamicResource ClearAll}" Name="ClearAllBtn" Click="ClearAllBtn_Click" Padding="10,5,10,5" Width="50"/>
                                    <Button  Margin="0,0,10,0" Content="读取" Name="ReadAllBtn" Click="ReadAllBtn_Click" Padding="10,5,10,5" Width="60"/>
                                    <Button  Margin="0,0,0,0" Content="设置" Name="WriteAllBtn" Click="WriteAllBtn_Click" Padding="10,5,10,5" Width="60"/>
                                </StackPanel>
                            </GroupBox>
                            <!--通讯参数设置-->
                            <GroupBox Header="通讯参数设置" Margin="5,0,0,0" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" Width="270">
                                <StackPanel Margin="3,5,5,5" Name="CommunicatePanel">
                                    <StackPanel  Margin="0,0,0,6" Orientation="Horizontal">
                                        <TextBox  Margin="0,0,5,0" Text="192.168.123.123" Name="SetIPText" Width="117" Height="26"  Foreground="#BDBDBD"/>
                                        <Button  Margin="0,0,5,0" Name="SetIPBtn" Click="SetIPBtn_Click" Content="设置IP地址" Padding="10,5,10,5" Width="110"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="SetIPCheckbox" />
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,6" Orientation="Horizontal">
                                        <TextBox  Margin="0,0,5,0" Text="192.168.123.1" Name="SetGatewayText" Width="117" Height="26"  Foreground="#BDBDBD"/>
                                        <Button  Margin="0,0,5,0" Name="SetGatewayBtn"  Click="SetGatewayBtn_Click" Content="设置网关地址" Padding="10,5,10,5" Width="110"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="SetGatewayCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,6" Orientation="Horizontal">
                                        <TextBox  Margin="0,0,5,0" Name="SetMACText" Width="117" Height="26"  Foreground="#BDBDBD" IsEnabled="False"/>
                                        <Button  Margin="0,0,5,0" Name="SetMACBtn" Click="SetMACBtn_Click" Content="设置MAC地址" Padding="10,5,10,5" Width="110"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="SetMACCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,6" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Width="117" SelectedIndex="0" Name="AutoDisconnectCom" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>无</ComboBoxItem>
                                            <ComboBoxItem>1分钟</ComboBoxItem>
                                            <ComboBoxItem>2分钟</ComboBoxItem>
                                            <ComboBoxItem>3分钟</ComboBoxItem>
                                            <ComboBoxItem>4分钟</ComboBoxItem>
                                            <ComboBoxItem>5分钟</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="自动断线时间" Name="AutoDisconnectBtn" Click="AutoDisconnectBtn_Click" Padding="10,5,10,5" Width="110"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="AutoDisconnectheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,6" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" SelectedIndex="0"  Name="ConnectClientCom" Width="117" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>1个</ComboBoxItem>
                                            <ComboBoxItem>2个</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="网络连接数量" Name="ConnectClientBtn" Click="ConnectClientBtn_Click"  Padding="10,5,10,5" Width="110"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="ConnectClientbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,6" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" SelectedIndex="1"  Name="EthernetSpeedCom" Width="117" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>10Base</ComboBoxItem>
                                            <ComboBoxItem>10Base/100Base</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Name="EthernetSpeedBtn" Click="EthernetSpeedBtn_Click" Content="网口通讯速度" Padding="10,5,10,5" Width="110"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True"  Name="EthernetSpeedCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,6" Orientation="Horizontal">
                                        <ComboBox Name="DHCPModeCom" SelectedIndex="0"   Margin="0,0,5,0" Width="117" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>静态DHCP</ComboBoxItem>
                                            <ComboBoxItem>模式1</ComboBoxItem>
                                            <ComboBoxItem>模式2</ComboBoxItem>
                                            <ComboBoxItem>模式3</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="DHCP模式" Name="DHCPModeBtn" Click="DHCPModeBtn_Click" Padding="10,5,10,5" Width="110"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="DHCPModeCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,6" Orientation="Horizontal">
                                        <ComboBox Name="USBModeCom" SelectedIndex="1"  Margin="0,0,5,0" Width="117" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>VCOM</ComboBoxItem>
                                            <ComboBoxItem>UTP</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Name="USBModeBtn" Click="USBModeBtn_Click" Content="USB模式" Padding="10,5,10,5" Width="110"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="USBModeCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,0" Orientation="Horizontal">
                                        <ComboBox  Name="USBFixedCom" SelectedIndex="1"  Margin="0,0,5,0" Width="117" Height="26" Text="IP Address" Foreground="#BDBDBD">
                                            <ComboBoxItem>不固定</ComboBoxItem>
                                            <ComboBoxItem>固定</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Name="USBFixedBtn" Click="USBFixedBtn_Click" Content="USB端口" Padding="10,5,10,5" Width="110"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="USBFixedCheckbox"/>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                        <!--打印机属性设置-->
                        <GroupBox Header="打印机属性设置" Margin="10,6,10,5" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" Height="433" Width="720" VerticalAlignment="Top">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28*" />
                                    <ColumnDefinition Width="32*"/>
                                    <ColumnDefinition Width="23*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="85"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <!--代碼頁-->
                                <GroupBox  Margin="10,5,0,10" Grid.ColumnSpan="2" Height="65"  Width="485" Header="代码页" VerticalAlignment="Center" HorizontalAlignment="Left" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" >
                                    <StackPanel  Margin="10,0,0,0" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,10,0" SelectedIndex="0"  Name="CodePageCom" Width="130" Height="28" Text="IP Address" Foreground="#BDBDBD"/>
                                        <Button  Margin="0,0,10,0" Name="CodePageSetBtn" Click="CodePageSetBtn_Click" Content="设置代码页" Padding="10,5,10,5" Width="130" Height="28"/>
                                        <Button  Margin="0,0,10,0" Name="CodePagePrintBtn" Click="CodePagePrintBtn_Click"  Content="打印代码页" Padding="10,5,10,5" Width="130" Height="28"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="CodePageSetCheckbox"/>
                                    </StackPanel>
                                </GroupBox>
                                <!--column1-->
                                <StackPanel Grid.Row="1" Grid.RowSpan="2" Margin="10,10,5,0"  Name="PropertyColumn1" >
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox SelectedIndex="0"  Margin="0,0,5,0" Name="LanguageSetCom" Width="100" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>简体GB18030</ComboBoxItem>
                                            <ComboBoxItem>繁体BIG5</ComboBoxItem>
                                            <ComboBoxItem>韩文</ComboBoxItem>
                                            <ComboBoxItem>日文</ComboBoxItem>
                                            <ComboBoxItem>日文SHIFT JIS</ComboBoxItem>
                                            <ComboBoxItem>日文JIS</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="语言设置" Padding="10,5,10,5" Width="100" Name="LanguageSetBtn" Click="LanguageSetBtn_Click"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="LanguageSetCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" SelectedIndex="1"  Width="100" Height="26" Name="FontBSettingCom" Foreground="#BDBDBD">
                                            <ComboBoxItem>不支持</ComboBoxItem>
                                            <ComboBoxItem>支持</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="FontB字体" Name="FontBSettingBtn" Padding="10,5,10,5" Width="100" Click="FontBSettingBtn_Click"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="FontBSettingCheckbox" />
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" SelectedIndex="1"  Name="CustomziedFontCom" Width="100" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>关闭</ComboBoxItem>
                                            <ComboBoxItem>启用</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Name="CustomziedFontBtn" Click="CustomziedFontBtn_Click" Content="定制字体" Padding="10,5,10,5" Width="100"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="CustomziedFontCheckbox" />
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" SelectedIndex="1"  Width="100" Height="26"  Foreground="#BDBDBD" Name="DirectionCombox">
                                            <ComboBoxItem>80250N</ComboBoxItem>
                                            <ComboBoxItem>H80250</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="走纸方向" Padding="10,5,10,5" Width="100" Name="Direction" Click="Direction_Click"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="DirectionCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" SelectedIndex="0"  Name="MotorAccControlCom" Width="100" Height="26"  Foreground="#BDBDBD">
                                            <ComboBoxItem>关闭</ComboBoxItem>
                                            <ComboBoxItem>开启</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="马达加速"  Name="MotorAccControlBtn" Click="MotorAccControlBtn_Click"  Padding="10,5,10,5" Width="100" />
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="MotorAccControlCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" SelectedIndex="0"  Width="100" Height="26" Name="AccMotorCom" Foreground="#BDBDBD">
                                            <ComboBoxItem>1.0</ComboBoxItem>
                                            <ComboBoxItem>0.8</ComboBoxItem>
                                            <ComboBoxItem>0.6</ComboBoxItem>
                                            <ComboBoxItem>0.4</ComboBoxItem>
                                            <ComboBoxItem>0.2</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="马达加速度" Name="AccMotorBtn" Click="AccMotorBtn_Click" Padding="10,5,10,5" Width="100"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True"  Name="AccMotorCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" SelectedIndex="1"  Name="PrintSpeedCom" Width="100" Height="26"  Foreground="#BDBDBD">
                                            <ComboBoxItem>200mm/s</ComboBoxItem>
                                            <ComboBoxItem>250mm/s</ComboBoxItem>
