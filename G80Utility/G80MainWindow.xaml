                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28*" />
                                    <ColumnDefinition Width="32*"/>
                                    <ColumnDefinition Width="23*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="85"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <!--代碼頁-->
                                <GroupBox  Margin="10,5,0,10" Grid.ColumnSpan="2" Height="65"  Width="485" Header="代码页" VerticalAlignment="Center" HorizontalAlignment="Left" BorderThickness="1" BorderBrush="#A9A9A9" FontSize="14" >
                                    <StackPanel  Margin="10,0,0,0" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,10,0" Name="CodePageCom" Width="130" Height="28" Text="IP Address" Foreground="#BDBDBD"/>
                                        <Button  Margin="0,0,10,0" Name="CodePageSetBtn" Click="CodePageSetBtn_Click" Content="设置代码页" Padding="10,5,10,5" Width="130" Height="28"/>
                                        <Button  Margin="0,0,10,0" Name="CodePagePrintBtn" Click="CodePagePrintBtn_Click"  Content="打印代码页" Padding="10,5,10,5" Width="130" Height="28"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="CodePageSetCheckbox"/>
                                    </StackPanel>
                                </GroupBox>
                                <!--column1-->
                                <StackPanel Grid.Row="1" Grid.RowSpan="2" Margin="10,10,5,0" >
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Name="LanguageSetCom" Width="100" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>简体GB18030</ComboBoxItem>
                                            <ComboBoxItem>繁体BIG5</ComboBoxItem>
                                            <ComboBoxItem>韩文</ComboBoxItem>
                                            <ComboBoxItem>日文</ComboBoxItem>
                                            <ComboBoxItem>日文SHIFT JIS</ComboBoxItem>
                                            <ComboBoxItem>日文JIS</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="语言设置" Padding="10,5,10,5" Width="100" Name="LanguageSetBtn" Click="LanguageSetBtn_Click"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="LanguageSetCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Width="100" Height="26" Name="FontBSettingCom" Foreground="#BDBDBD">
                                            <ComboBoxItem>不支持</ComboBoxItem>
                                            <ComboBoxItem>支持</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="FontB字体" Name="FontBSettingBtn" Padding="10,5,10,5" Width="100" Click="FontBSettingBtn_Click"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="FontBSettingCheckbox" />
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Name="CustomziedFontCom" Width="100" Height="26" Foreground="#BDBDBD">
                                            <ComboBoxItem>关闭</ComboBoxItem>
                                            <ComboBoxItem>启用</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Name="CustomziedFontBtn" Click="CustomziedFontBtn_Click" Content="定制字体" Padding="10,5,10,5" Width="100"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="CustomziedFontCheckbox" />
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Width="100" Height="26"  Foreground="#BDBDBD" Name="DirectionCombox">
                                            <ComboBoxItem>80250N</ComboBoxItem>
                                            <ComboBoxItem>H80250</ComboBoxItem>
                                        </ComboBox>
                                        <Button  Margin="0,0,5,0" Content="走纸方向" Padding="10,5,10,5" Width="100" Name="Direction" Click="Direction_Click"/>
                                        <CheckBox VerticalAlignment="Center" IsChecked="True" Name="DirectionCheckbox"/>
                                    </StackPanel>
                                    <StackPanel  Margin="0,0,0,10" Orientation="Horizontal">
                                        <ComboBox  Margin="0,0,5,0" Name="MotorAccControlCom" Width="100" Height="26"  Foreground="#BDBDBD">
                                            <ComboBoxItem>关闭</ComboBoxItem>
                                            <ComboBoxItem>开启</ComboBoxItem>
